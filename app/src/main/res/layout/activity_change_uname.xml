<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.lovehome.lovehomeapp.userM.other_activity.ChangeUName">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4dc18c">
        <ImageView
            android:id="@+id/back_imge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="left"
            android:src="@mipmap/back_icon"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:text="修改用户名称"/>
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@mipmap/button_press_bg">

        <TextView
            android:id="@+id/change_obj"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center"
            android:text="用户名称："/>
        <EditText
            android:id="@+id/u_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"/>
    </LinearLayout>
    <FrameLayout
        android:clickable="true"
        android:id="@+id/affirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_large_green"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="确认修改"
            android:textSize="18dp"
            android:textColor="#ffffff"/>
    </FrameLayout>



</LinearLayout>
