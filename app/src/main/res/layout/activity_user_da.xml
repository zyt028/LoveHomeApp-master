<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lovehome.lovehomeapp.userM.other_activity.UserDa"
    android:background="#ffffff">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4dc18c">
        <ImageView
            android:id="@+id/imgBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="left"
            android:src="@mipmap/back_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:text="用户资料"/>
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff"/>
    <LinearLayout
        android:id="@+id/user_photo"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="#4dc18c">
        <ImageView
            android:id="@+id/index_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/mrtx_pic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:text="请点击修改头像"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/img_my_fragment_login_right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:paddingLeft="5dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="18dp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:id="@+id/tex_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#eeeeee"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="18dp"
                android:gravity="right"
                android:text=" "/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:layout_gravity="center"
                android:src="@mipmap/img_my_fragment_title_right"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeee"/>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:textSize="18dp"
            android:paddingLeft="5dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:id="@+id/tex_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textColor="#eeeeee"
                android:gravity="right"
                android:text=" 15111014667"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:layout_gravity="center"
                android:src="@mipmap/img_my_fragment_title_right"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeee"/>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/user_addresss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系地址"
            android:textSize="18dp"
            android:paddingLeft="5dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:id="@+id/tex_user_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#eeeeee"
                android:textSize="18dp"
                android:gravity="right"
                android:text="湖南"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:layout_gravity="center"
                android:src="@mipmap/img_my_fragment_title_right"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgces"/>

</LinearLayout>
